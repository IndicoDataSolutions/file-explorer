@import 'variables'

.accountselect
    width:200px
    margin-right:10px
    float:left
    white-space:nowrap
    overflow:hidden
    button.accountsbutton
        color: $font_color
        font-size:16px
        font-weight:bold
        height: 42px
        width:100%
        text-align:left
        border: 1px solid #8498b6
        background: $background_color
        border-radius:3px
        line-height:40px
        padding:0 10px
        margin:0
        position: relative
        img.accounticon
            height: 16px
            width: 20px
            position: absolute
            top: 0px
            left: 5px
            margin: 12px 0
        div.name
            text-overflow:ellipsis
            white-space:nowrap
            overflow-x:hidden
            overflow-y:hidden
            height: 35px
            width: 140px
            display: inline-block
            position: absolute
            top: 0px
            left: 30px;
        div.arrow
            height:0px
            width:0px
            border-left: 4px solid transparent
            border-right: 4px solid transparent
            border-top: 4px solid #AAA
            display: inline-block
            position: absolute
            top: 0px
            right: 10px
            margin: 18px 0px
    div#account-dropdown.dropdown
        ul.dropdown-menu
            border-radius: 0
            padding: 0
            max-height: 400px
            overflow-y: scroll
            background: $background_color
            border: solid 1px #384558
            box-shadow: none
            li
                cursor: pointer
                padding: 0.5rem
                &:hover
                    background-color: #EEE
                    color: #555
                img.accounticon
                    height: 16px
                    width: 20px
                    margin-right: 5px
                div.accountname
                    text-overflow:ellipsis
                    white-space:nowrap
                    overflow:hidden
                    width:150px
                    display:inline-block
                    margin-bottom:-4px
                div.accountsicon
                    background: url($static_path + 'settings_popup_icons.png') -19px -15px no-repeat
                    height: 16px
                    width: 16px
                    display: inline-block
                    margin-bottom: -3px
                    margin-right: 7px
                    margin-left: 2px
                div.computericon
                    background: url($static_path + '/computer_icon.png') -3px 0px no-repeat
                    height: 16px
                    width: 20px
                    display: inline-block
                    margin-bottom: -3px
                    margin-right: 4px
                    margin-left: 1px
    div#account-dropdown.dropdown.dropdown-tip
        &:before
            border-bottom-color: #384558
        &:after
            border-bottom: 6px solid $background_color
